{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "esnext",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~src/*": [
        "./src/*"
      ],
      "~components/*": [
        "./src/components/*"
      ],
      "~utils/*": [
        "./src/utils/*"
      ],
      "~utils": [
        "./src/utils"
      ],
      "~theme/*": [
        "./src/theme/*"
      ],
      "~theme": [
        "./src/theme"
      ],
      "~assets/*": [
        "./src/assets/*"
      ],
    },
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "include": [
    "src"
  ]
}
